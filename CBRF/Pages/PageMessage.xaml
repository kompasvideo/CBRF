<Page x:Class="CBRF.Pages.PageMessage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CBRF.Pages"
      mc:Ignorable="d" 
       Background="{StaticResource BackGroundColor}"
      DataContext="{Binding PageMessageViewModel, Source={StaticResource ViewModelLocator}}">

    <Grid>
        <Border Style="{StaticResource BorderDialog}" Width="300" Height="100">
            <Grid Width="300" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <TextBlock Text="{Binding MessageStr}" HorizontalAlignment="Center" VerticalAlignment="Center" 
                           TextWrapping="Wrap"/>
                </Grid>
                <Grid Grid.Row="1">
                    <Button Content="OK" HorizontalAlignment="Center" VerticalAlignment="Center" Width="80" Height="30" 
                           Command="{Binding OKClick}"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>
